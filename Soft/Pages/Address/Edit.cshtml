@page
@using Core.Extensions
@model PageModels.AddressModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AddressData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.Editor(model => model.item.streetName)
            @Html.Editor(model => model.item.houseNumber)
            @Html.Editor(model => model.item.apartmentNumber)
            @Html.Editor(model => model.item.zipCode)
            @Html.Editor(model => model.item.city)
            @Html.Editor(model => model.item.region)
            @Html.Editor(model => model.item.country)

            <input type="hidden" asp-for="item.id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index" asp-route-handler="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
