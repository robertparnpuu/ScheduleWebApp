@page
@using Core.Extensions
@model PageModels.ContractModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            @Html.TableSortHeader(x => x.item.personName, Model)
            @Html.TableSortHeader(x => x.item.occupationName, Model)
            @Html.TableSortHeader(x => x.item.departmentName, Model)
            @Html.TableSortHeader(x => x.item.validFrom, Model)
            @Html.TableSortHeader(x => x.item.validTo, Model)
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var i in Model.items)
    {
        <tr>
            @Html.RowData(x => i.personName)
            @Html.RowData(x => i.occupationName)
            @Html.RowData(x => i.departmentName)
            @Html.RowData(x => i.validFrom)
            @Html.RowData(x => i.validTo)
            @Html.RowButtons(Model.PageUrl, $"{i.id}")
        </tr>
    }
    </tbody>

</table>
