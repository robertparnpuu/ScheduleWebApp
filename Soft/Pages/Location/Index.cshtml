@page
@using Core.Extensions
@model PageModels.LocationModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.TableSortHeader(x => x.item.name, Model)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].fullAddress)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].email)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].phoneNumber)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.items)
    {
        <tr>
            <td>@Html.RowData(x => item.name)</td>
            <td>@Html.DisplayFor(modelItem => item.fullAddress)</td>
            <td>@Html.DisplayFor(modelItem => item.email)</td>
            <td>@Html.DisplayFor(modelItem => item.phoneNumber)</td>
            <td>
                <a asp-page="./Edit" asp-route-handler="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-handler="Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-handler="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>