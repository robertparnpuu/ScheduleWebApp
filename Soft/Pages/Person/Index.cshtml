@page
@model PageModels.PersonModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.item.firstName)</th>
            <th>@Html.DisplayNameFor(model => model.item.lastName)</th>
            <th>@Html.DisplayNameFor(model => model.item.dateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.item.idCode)</th>
            <th>@Html.DisplayNameFor(model => model.item.personEmail)</th>
            <th>@Html.DisplayNameFor(model => model.item.personPhoneNr)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.items)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.firstName)</td>
            <td>@Html.DisplayFor(modelItem => item.lastName)</td>
            <td>@Html.DisplayFor(modelItem => item.dateOfBirth)</td>
            <td>@Html.DisplayFor(modelItem => item.idCode)</td>
            <td>@Html.DisplayFor(modelItem => item.personEmail)</td>
            <td>@Html.DisplayFor(modelItem => item.personPhoneNr)</td>
            <td>
                <a asp-page="./Edit" asp-route-handler="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-handler="Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-handler="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
