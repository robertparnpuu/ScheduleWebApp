</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].locationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].occupationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].weekDayId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].startTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].endTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirementData[0].minEmployees)
