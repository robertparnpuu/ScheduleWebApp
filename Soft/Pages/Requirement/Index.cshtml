@page
@model PageModels.RequirementModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.items[0].locationId)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].occupationId)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].weekDayId)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].startTime)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].endTime)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].minEmployees)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].maxEmployees)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.items) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.locationName)</td>
            <td>@Html.DisplayFor(modelItem => item.occupationName)</td>
            <td>@Html.DisplayFor(modelItem => item.weekDayId)</td>
            <td>@Html.DisplayFor(modelItem => item.startTime)</td>
            <td>@Html.DisplayFor(modelItem => item.endTime)</td>
            <td>@Html.DisplayFor(modelItem => item.minEmployees)</td>
            <td>@Html.DisplayFor(modelItem => item.maxEmployees)</td>

            <td>
                <a asp-page="./Edit" asp-route-handler="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-handler="Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-handler="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
