@page
@using Core.Extensions
@model PageModels.RequirementModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.items[0].locationId)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].occupationId)</th>
            @Html.TableSortHeader(x => x.item.weekDayId, Model)
            @Html.TableSortHeader(x => x.item.startTime, Model)
            @Html.TableSortHeader(x => x.item.endTime, Model)
            @Html.TableSortHeader(x => x.item.minEmployees, Model)
            @Html.TableSortHeader(x => x.item.maxEmployees, Model)
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.items) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.locationName)</td>
            <td>@Html.DisplayFor(modelItem => item.occupationName)</td>
            @Html.RowData(x => item.weekDayName)
            @Html.RowData(x => item.startTime)
            @Html.RowData(x => item.endTime)
            @Html.RowData(x => item.minEmployees)
            @Html.RowData(x => item.maxEmployees)
            @Html.RowButtons(Model.PageUrl, $"{item.id}")
        </tr>
}
    </tbody>
</table>
