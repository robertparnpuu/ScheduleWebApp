@page
@using Core.Extensions
@model PageModels.ShiftAssignmentModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.item.personName)</th>
        <th>@Html.DisplayNameFor(model => model.item.locationName)</th>
        <th>@Html.TableSortHeader(x => x.item.startTime, Model)</th>
        <th>@Html.TableSortHeader(x => x.item.endTime, Model)</th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.items)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.personName)</td>
            <td>@Html.DisplayFor(modelItem => item.locationName)</td>
            <td>@Html.RowData(x => item.startTime)</td>
            <td>@Html.RowData(x => item.endTime)</td>
            <td>@Html.RowButtons(Model.PageUrl, $"{item.id}")</td>
        </tr>
    }
    </tbody>
</table>