@page
@using Core.Extensions
@model PageModels.StandardShiftModel

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.TableSortHeader(x => x.item.name, Model)</th>
            <th>@Html.TableSortHeader(x => x.item.startTime, Model)</th>
            <th>@Html.TableSortHeader(x => x.item.endTime, Model)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].locationName)</th>
            <th>@Html.DisplayNameFor(model => model.items[0].occupationName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.items)
    {
        <tr>
            <td>@Html.RowData(x => item.name)</td>
            <td>@Html.RowData(x => item.startTime)</td>
            <td>@Html.RowData(x => item.endTime)</td>
            <td>@Html.DisplayFor(modelItem => item.locationName)</td>
            <td>@Html.DisplayFor(modelItem => item.occupationName)</td>
            <td>@Html.RowButtons(Model.PageUrl, $"{item.id}")</td>
        </tr>
    }
    </tbody>
</table>